# Production Environment Variables
# This file is used when building for production (npm run build)

# =============================================================================
# API Configuration (Backend Server)
# =============================================================================
# Backend API domain: api.effmemberportal.org
# Using HTTPS with SSL/TLS (Let's Encrypt certificate)
# Nginx reverse proxy handles SSL termination

VITE_API_URL=https://api.effmemberportal.org
VITE_API_BASE_URL=https://api.effmemberportal.org/api/v1

# =============================================================================
# WebSocket Configuration
# =============================================================================
# WebSocket URL for real-time features (secure WebSocket over SSL)
VITE_WS_URL=wss://api.effmemberportal.org
VITE_WS_PATH=/socket.io

# =============================================================================
# Application Configuration
# =============================================================================
VITE_APP_NAME=EFF Membership Management System
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=production

# =============================================================================
# Feature Flags
# =============================================================================
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_SMS=true
VITE_ENABLE_PAYMENTS=true
VITE_ENABLE_IEC_INTEGRATION=true
VITE_ENABLE_DEBUG=false

# =============================================================================
# UI Configuration
# =============================================================================
VITE_DEFAULT_LANGUAGE=en
VITE_THEME_MODE=light
VITE_ITEMS_PER_PAGE=25

# =============================================================================
# Security Configuration
# =============================================================================
# Disable development mode features in production
VITE_DEV_MODE=false

